* text=auto

# Kildetekst som skal være LF på tværs af OS
*.ts   text eol=lf
*.tsx  text eol=lf
*.js   text eol=lf
*.jsx  text eol=lf
*.mjs  text eol=lf
*.cjs  text eol=lf
*.json text eol=lf
*.css  text eol=lf
*.scss text eol=lf
*.md   text eol=lf
*.yml  text eol=lf
*.yaml text eol=lf
*.sh   text eol=lf

# Windows scripts
*.ps1  text eol=crlf
*.bat  text eol=crlf

# Binære/ikke-tekst filer
*.png  binary
*.jpg  binary
*.jpeg binary
*.gif  binary
*.webp binary
*.ico  binary
*.woff binary
*.woff2 binary
*.ttf  binary
*.eot  binary

# SVG holdes som tekst men uden EOL-normalisering
*.svg -text
